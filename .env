# QuantumSpectre Elite Trading System - Environment Variables Template
# Copy this file to .env and modify as needed

# Environment
QUANTUM_SPECTRE_ENV=development
DEBUG=False

# System Configuration
QUANTUM_SPECTRE_CONFIG=

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False
API_LOG_LEVEL=info
API_WORKERS=1

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Database settings
DB_ENGINE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quantum_spectre
DB_USER=postgres
DB_PASSWORD=postgres

# Binance API settings
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_API_URL=https://api.binance.com
BINANCE_WS_BASE=wss://stream.binance.com:9443
BINANCE_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT
BINANCE_STREAMS=depth,trade,kline_1m,ticker

# Deriv API settings
DERIV_API_KEY=
DERIV_API_SECRET=
DERIV_API_URL=https://api.deriv.com
DERIV_WS_URL=wss://ws.binaryws.com/websockets/v3
DERIV_SYMBOLS=R_10,R_25,R_50,R_75,R_100
DERIV_STREAMS=tick,ohlc

# WebSocket settings
WS_MAX_RETRIES=10
WS_HEARTBEAT_INTERVAL=30.0
WS_HEALTH_CHECK_INTERVAL=60.0

# REST API settings
REST_UPDATE_INTERVAL=60.0
HTTP_TIMEOUT=10.0
HTTP_MAX_RETRIES=3
HTTP_RETRY_DELAY=1.0

# Feed settings
FEED_HEALTH_TIMEOUT=120.0

# Reconnection settings
BASE_RECONNECT_DELAY=1.0
MAX_RECONNECT_DELAY=60.0
ERROR_RETRY_DELAY=5.0

# News and social media settings
NEWS_KEYWORDS=bitcoin,ethereum,crypto,blockchain
NEWS_SOURCES=coindesk,cointelegraph,decrypt,bloomberg,reuters
NEWS_UPDATE_INTERVAL=300.0

SOCIAL_KEYWORDS=bitcoin,ethereum,crypto,blockchain
SOCIAL_PLATFORMS=twitter,reddit,discord,telegram
SOCIAL_UPDATE_INTERVAL=60.0

TWITTER_KEYWORDS=bitcoin,ethereum,crypto,blockchain
ENABLE_TWITTER_STREAM=True

# Onchain settings
ONCHAIN_NETWORKS=ethereum,binance_smart_chain,solana
ONCHAIN_ADDRESSES=
ONCHAIN_UPDATE_INTERVAL=300.0
ENABLE_ONCHAIN_MONITORING=True

# Darkweb settings
DARKWEB_KEYWORDS=bitcoin,ethereum,crypto,blockchain
DARKWEB_SOURCES=
DARKWEB_UPDATE_INTERVAL=3600.0

# Market regime settings
REGIME_UPDATE_INTERVAL=3600.0

# Feature calculation settings
FEATURE_UPDATE_INTERVAL=1.0
FEATURE_TIMEFRAMES=1m,5m,15m,1h,4h,1d

# Machine learning settings
ML_MODEL_PATH=ml_models/saved_models
ML_TRAIN_INTERVAL=86400.0
ML_PREDICT_INTERVAL=60.0
ML_FEATURE_IMPORTANCE_INTERVAL=3600.0
ML_HARDWARE_ACCELERATION=True

# Brain council settings
COUNCIL_UPDATE_INTERVAL=1.0
VOTING_THRESHOLD=0.6
MIN_CONFIDENCE_THRESHOLD=0.65
MAX_BRAIN_WEIGHT=5.0
MIN_BRAIN_WEIGHT=0.1
PERFORMANCE_WINDOW=100
BRAIN_EVOLUTION_INTERVAL=3600.0

# Execution settings
ORDER_EXPIRY=60.0
MAX_SLIPPAGE=0.0025
MAX_SPREAD=0.0025
EXECUTION_MODEL=adaptive
EXECUTION_RETRY_LIMIT=3
EXECUTION_RETRY_DELAY=0.5

# Risk management settings
MAX_POSITION_SIZE=0.1
MAX_TOTAL_EXPOSURE=0.5
DEFAULT_STOP_LOSS_PCT=0.02
DEFAULT_TAKE_PROFIT_PCT=0.04
MAX_DRAWDOWN_PCT=0.15
RISK_PER_TRADE=0.01

# Circuit breaker settings
ENABLE_CIRCUIT_BREAKER=True
MAX_CONSECUTIVE_LOSSES=5
MAX_DAILY_DRAWDOWN=0.05
CIRCUIT_BREAKER_COOLDOWN=3600.0

# Backtesting settings
ENABLE_CONTINUOUS_BACKTESTING=True
BACKTEST_INTERVAL=3600.0
BACKTEST_WINDOW=100

# Performance and hardware settings
ENABLE_THREADING=True
MAX_THREADS=8
PROCESS_PRIORITY=high

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/quantum_spectre.log
LOG_ROTATION=midnight
LOG_BACKUP_COUNT=14

# System paths
LOG_DIR=logs
DATA_DIR=data
CONFIG_DIR=config